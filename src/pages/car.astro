---
import Layout from '../layouts/MainLayout.astro';

// Get all blog files inside `/src/pages/car/`
const blogs = await Astro.glob('../pages/car/*.astro');
---

<Layout>
  <h1 class="text-3xl font-bold mb-6">Car Blogs</h1>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    {blogs.map((blog) => (
      <a href={blog.url} class="flex items-center bg-gray-100 p-4 rounded-lg hover:shadow-lg">
        <img src={blog.frontmatter.image} alt={blog.frontmatter.title} class="w-32 h-32 object-cover rounded-lg mr-4">

        <div>
          <h2 class="text-xl font-semibold">{blog.frontmatter.title}</h2>
          <p class="text-sm text-gray-500">{blog.frontmatter.date}</p>
          <p class="text-sm text-gray-700 mt-2">{blog.frontmatter.excerpt}</p>
          <span class="text-blue-500 font-bold mt-2 block">READ MORE</span>
        </div>
      </a>
    ))}
  </div>
</Layout>
