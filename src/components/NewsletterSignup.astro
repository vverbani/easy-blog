<!-- src/components/NewsletterSignup.astro -->
<form action="/api/signup" method="POST" class="newsletter-signup">
  <input
    type="email"
    name="email"
    placeholder="Your email"
    class="p-2 text-gray-800 w-full"
    required
  />
  <!-- Honeypot field -->
  <div style="display:none;">
    <label for="hp-field">Leave blank</label>
    <input type="text" name="hp-field" id="hp-field" tabindex="-1" autocomplete="off" />
  </div>
  <button type="submit" class="mt-2 p-2 bg-blue-600 hover:bg-blue-700 w-full text-white">
    Subscribe
  </button>
</form>
