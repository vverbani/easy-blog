---
import NewsletterSignup from './NewsletterSignup.astro';
---

<!-- Example Footer (e.g., src/components/Footer.astro or inline in your layout) -->
<footer class="bg-gray-800 text-white py-8">
  <div class="container mx-auto flex flex-col md:flex-row text-center md:text-left">
    <!-- Blog Title with Link to Homepage -->
    <div class="w-full md:w-1/5 p-4">
      <a href="/" class="text-xl text-white font-bold hover:underline">Astro Blog</a>
    </div>
    <!-- Blog Description with Link to Homepage -->
    <div class="w-full md:w-1/5 p-4">
      <p>Welcome to our blog - here you can find cool information that's worth reading! I think at least...</p>
    </div>
    <!-- Category Links -->
    <div class="w-full md:w-1/5 p-4">
      <p>Here's what you can find here:</p>
      <ul>
        <li><a href="/tech-ai" class="text-white hover:underline">Tech/AI</a></li>
        <li><a href="/car" class="text-white hover:underline">Car</a></li>
        <li><a href="/fishing" class="text-white hover:underline">Fishing</a></li>
      </ul>
    </div>
    <!-- Subscribe Section -->
    <div class="w-full md:w-1/5 p-4">
      <h3 class="text-lg font-bold mb-2">Subscribe</h3>
      <!-- Import and use the NewsletterSignup component -->
      <!-- If your footer is an .astro component, import NewsletterSignup at the top similarly as in Sidebar -->
      <NewsletterSignup />
    </div>
  </div>
</footer>
